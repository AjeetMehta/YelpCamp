<%-include("../partials/header") %>

<div class="container">

	<header class="jumbotron">
		<div class="container">
			<h1>Plan Your trip!!</h1>
			<p>Travel makes u the modest.U can see what a tiny place u can occupy in the world</p>
			<a class="btn btn-success" href="/campgrounds/new">Add a Campground</a>
		</div>
	</header>

	<div class="card-deck">
		<% campgrounds.forEach(function(campground){ %>
			<a class="card" href="/campgrounds/<%= campground._id %>">
				<img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
				<div class="card-body">
					<h4 class="card-title"><%= campground.name %></h4>
				</div>
			</a>
		<% }) %>
	</div>

</div>

<%-include("../partials/footer") %>
